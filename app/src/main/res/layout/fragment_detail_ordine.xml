
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Detail_ordine">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Linear"
        android:gravity="left|top"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_dettagli_intestazione1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:text="GENERALI"
            android:textColor="@color/grigio_scuro"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/linea1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/separatore"
            app:layout_constraintTop_toBottomOf="@+id/notifiche" />
        <TextView
            android:id="@+id/text_dettagli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_dettagli_intestazione2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:text="STATO ORDINE"
            android:textColor="@color/grigio_scuro"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/linea2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/separatore"
            app:layout_constraintTop_toBottomOf="@+id/notifiche" />

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:sv_doneStepLineColor="@color/verde_chiaro"
            app:sv_doneTextColor="@android:color/background_dark"
            app:sv_nextStepLineColor="@color/celeste_scuro"
            app:sv_nextTextColor="@color/nero"
            app:sv_selectedCircleColor="@color/celeste_scuro"
            app:sv_selectedStepNumberColor="@color/nero"
            app:sv_selectedTextColor="@color/nero"
            app:sv_stepsNumber="4" />


        <Button
            android:id="@+id/btn_lista_libri"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_light"
            android:text="Visualizza Lista Libri"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />



    </LinearLayout>







</android.support.design.widget.CoordinatorLayout>