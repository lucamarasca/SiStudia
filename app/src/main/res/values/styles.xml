<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="colorPrimary">@color/grigio_scuro</item>
        <item name="colorPrimaryDark">@color/grigio_scuro</item>
        <item name="colorAccent">@color/celeste_scuro</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/celeste_chiaro</item>
    </style>



    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grigio_scuro</item>
        <item name="colorPrimaryDark">@color/grigio_scuro</item>
        <item name="android:title">"DeBox</item>
    </style>



    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grigio_scuro</item>
        <item name="colorPrimaryDark">@color/grigio_scuro</item>
        <item name="colorAccent">@color/celeste_scuro</item>
    </style>



    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/grigio_scuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>



    <!-- https://github.com/yarolegovich/LovelyDialog/blob/master/sample/src/main/res/values/styles.xml -->
    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#212121</item>
    </style>
    <style name="tema_lista_ordini">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_ordini</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="tema_sfondo">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_layout</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="tema_intestazione">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_intestazione</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="tema_menu">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/background_menu</item>
